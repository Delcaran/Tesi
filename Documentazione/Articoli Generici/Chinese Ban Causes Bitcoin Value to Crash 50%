	<!-- google ad sense text -->
<div class="art_new_ads_468_60">
	<script type="text/javascript">
	<!--
		google_ad_client = "ca-pub-9007718109453490";
		/* 468x60 Text Slot */
		google_ad_slot = "4136153823";
